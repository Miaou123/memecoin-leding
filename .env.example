# Database
DB_USER=memecoin
DB_PASSWORD=your_secure_password
DATABASE_URL=postgresql://memecoin:your_secure_password@localhost:5432/memecoin_lending

# ================================
# Database Configuration
# ================================
# Query timeout in milliseconds (default: 30000 = 30 seconds)
DB_QUERY_TIMEOUT_MS=30000
# Slow query threshold for logging (default: 5000 = 5 seconds)  
DB_SLOW_QUERY_THRESHOLD_MS=5000

# Redis
REDIS_URL=redis://localhost:6379

# Solana
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY
PROGRAM_ID=MCLend1111111111111111111111111111111111111
ADMIN_WALLET_PATH=./keys/admin.json

# Distribution Crank Service
ADMIN_KEYPAIR_PATH=./keys/admin.json
IDL_PATH=../../target/idl/memecoin_lending.json

# Fee Claimer Configuration
ENABLE_FEE_CLAIMER=true
FEE_CLAIM_INTERVAL_MS=300000
MIN_FEE_CLAIM_THRESHOLD=0.01
# For development: use keypair file
# ADMIN_KEYPAIR_PATH=./keys/admin.json
# For production: use base64 encoded private key
# ADMIN_PRIVATE_KEY=base64_encoded_private_key

# Admin API Authentication
ADMIN_API_KEY=your_secure_admin_api_key_here

# ================================
# Security Alerting Configuration
# ================================

# Master switch for all security alerts
SECURITY_ALERTS_ENABLED=true

# Minimum severity to trigger alerts (LOW, MEDIUM, HIGH, CRITICAL)
ALERT_MIN_SEVERITY=MEDIUM

# Rate limit: minimum minutes between alerts of same type
ALERT_RATE_LIMIT_MINUTES=5

# Persist events to database (recommended for production)
SECURITY_PERSIST_TO_DB=true

# ================================
# Telegram Alerts (Recommended)
# ================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_ALERTS_ENABLED=true

# ================================
# Discord Alerts (Optional)
# ================================
DISCORD_WEBHOOK_URL=
DISCORD_ALERTS_ENABLED=false

# ================================
# Slack Alerts (Optional)
# ================================
SLACK_WEBHOOK_URL=
SLACK_ALERTS_ENABLED=false

# Jupiter Price API
# Get your API key at: https://portal.jup.ag
JUPITER_API_KEY=your_jupiter_api_key_here

# API
API_URL=https://api.yourdomain.com
WS_URL=wss://api.yourdomain.com/ws

# ================================
# CORS Configuration
# ================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173

# ================================
# Trusted Proxy Configuration
# ================================
# Comma-separated list of trusted proxy IPs or CIDR ranges
# Leave empty to auto-detect Cloudflare IPs
TRUSTED_PROXY_IPS=
# Set to 'cloudflare' to automatically trust Cloudflare IPs
PROXY_MODE=cloudflare

# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token

# Frontend (Vite)
VITE_API_URL=https://api.yourdomain.com
VITE_WS_URL=wss://api.yourdomain.com/ws
VITE_SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY
VITE_PROGRAM_ID=MCLend1111111111111111111111111111111111111

# Protocol Token (for 50% LP limit instead of 20%)
PROTOCOL_TOKEN_MINT=

# ================================
# Token Verification Settings
# ================================
# Minimum token age in hours (default: 24)
MIN_TOKEN_AGE_HOURS=24
# Token cache TTL in milliseconds (default: 300000 = 5 minutes)
TOKEN_CACHE_TTL_MS=300000
# Minimum liquidity in USD (default: 1000)
MIN_LIQUIDITY_USD=1000
# Auto-whitelist tokens on-chain (default: false)
AUTO_WHITELIST_ENABLED=false

# ================================
# Manual Token Verification Requests
# ================================
# Enable Telegram notifications for verification requests
TELEGRAM_VERIFICATION_ENABLED=true
# Admin chat ID for verification notifications (defaults to TELEGRAM_CHAT_ID if not set)
TELEGRAM_ADMIN_CHAT_ID=
# Web app URL for deep linking in Telegram messages
WEB_APP_URL=http://localhost:3000
# Secret for Telegram webhook setup endpoint
TELEGRAM_WEBHOOK_SECRET=your_secure_webhook_secret
# Server URL for webhook configuration
SERVER_URL=https://api.yourdomain.com

# ================================
# Database Backup Configuration
# ================================
# Local backup retention (days)
BACKUP_RETENTION_DAYS=7

# S3 Remote Backups (HIGHLY RECOMMENDED for production)
# Create an S3 bucket and IAM user with s3:PutObject, s3:GetObject, s3:ListBucket permissions
BACKUP_S3_BUCKET=your-backup-bucket-name
BACKUP_S3_PREFIX=memecoin-lending/postgres
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1