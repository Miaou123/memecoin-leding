# Database
DB_USER=memecoin
DB_PASSWORD=your_secure_password
DATABASE_URL=postgresql://memecoin:your_secure_password@localhost:5432/memecoin_lending

# Redis
REDIS_URL=redis://localhost:6379

# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
PROGRAM_ID=MCLend1111111111111111111111111111111111111
ADMIN_WALLET_PATH=./keys/admin.json

# Distribution Crank Service
ADMIN_KEYPAIR_PATH=./keys/admin.json
IDL_PATH=../../target/idl/memecoin_lending.json

# Fee Claimer Configuration
ENABLE_FEE_CLAIMER=true
FEE_CLAIM_INTERVAL_MS=300000
MIN_FEE_CLAIM_THRESHOLD=0.01
# For development: use keypair file
# ADMIN_KEYPAIR_PATH=./keys/admin.json
# For production: use base64 encoded private key
# ADMIN_PRIVATE_KEY=base64_encoded_private_key

# Admin API Authentication
ADMIN_API_KEY=your_secure_admin_api_key_here

# ================================
# Security Alerting Configuration
# ================================

# Master switch for all security alerts
SECURITY_ALERTS_ENABLED=true

# Minimum severity to trigger alerts (LOW, MEDIUM, HIGH, CRITICAL)
ALERT_MIN_SEVERITY=MEDIUM

# Rate limit: minimum minutes between alerts of same type
ALERT_RATE_LIMIT_MINUTES=5

# Persist events to database (recommended for production)
SECURITY_PERSIST_TO_DB=true

# ================================
# Telegram Alerts (Recommended)
# ================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_ALERTS_ENABLED=true

# ================================
# Discord Alerts (Optional)
# ================================
DISCORD_WEBHOOK_URL=
DISCORD_ALERTS_ENABLED=false

# ================================
# Slack Alerts (Optional)
# ================================
SLACK_WEBHOOK_URL=
SLACK_ALERTS_ENABLED=false

# Jupiter Price API
# Get your API key at: https://portal.jup.ag
JUPITER_API_KEY=your_jupiter_api_key_here

# API
API_URL=https://api.yourdomain.com
WS_URL=wss://api.yourdomain.com/ws

# ================================
# CORS Configuration
# ================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173

# ================================
# Trusted Proxy Configuration
# ================================
# Comma-separated list of trusted proxy IPs or CIDR ranges
# Leave empty to auto-detect Cloudflare IPs
TRUSTED_PROXY_IPS=
# Set to 'cloudflare' to automatically trust Cloudflare IPs
PROXY_MODE=cloudflare

# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token

# Frontend (Vite)
VITE_API_URL=https://api.yourdomain.com
VITE_WS_URL=wss://api.yourdomain.com/ws
VITE_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
VITE_PROGRAM_ID=MCLend1111111111111111111111111111111111111