# Database
DATABASE_URL="postgresql://username:password@localhost:5432/memecoin_lending"

# Redis (optional, for background jobs)
REDIS_URL="redis://localhost:6379"

# Server
PORT=3001
CORS_ORIGIN="http://localhost:3000,http://localhost:5173"

# Jupiter API (for price feeds)
JUPITER_API_KEY=""

# Token Verification Settings
MIN_LIQUIDITY_USD=0  # Set to 0 for testing, 100000 for production
TOKEN_CACHE_TTL_MS=300000  # 5 minutes in milliseconds
DEXSCREENER_API_TIMEOUT=10000  # 10 seconds

# ============ Network ============
# For devnet
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com

# For mainnet (uncomment when ready)
# SOLANA_NETWORK=mainnet-beta
# SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# Or use Helius/Triton for better performance:
# SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY

# ============ Program IDs ============
# Devnet program
PROGRAM_ID=DWPzC5B8wCYFJFw9khPiCwSvErNJTVaBxpUzrxbTCNJk

# Mainnet program (update after deployment)
# PROGRAM_ID=YOUR_MAINNET_PROGRAM_ID

# ============ PDAs ============
# These are derived from program, update for mainnet
TREASURY_PDA=YOUR_TREASURY_PDA
PROTOCOL_STATE_PDA=YOUR_PROTOCOL_STATE_PDA

# Admin Settings
# Admin keypair is loaded from /keys/admin.json (project root)
# No environment variable needed
PROTOCOL_ADMIN_WALLET=""
ADMIN_API_KEY=your-secure-api-key-here

# ============ Telegram Alerts ============
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id
TELEGRAM_ALERTS_ENABLED=true

# ============ Circuit Breaker Thresholds ============
# LOSS_THRESHOLD_24H_SOL=10
# LOSS_THRESHOLD_1H_SOL=5
# LIQUIDATION_COUNT_THRESHOLD_1H=10

# ============ Treasury Thresholds ============
# LOW_BALANCE_THRESHOLD_SOL=10
# CRITICAL_BALANCE_THRESHOLD_SOL=2
ENABLE_TREASURY_MONITORING=true

# ============ Fee Claimer ============
ENABLE_FEE_CLAIMER=true
MIN_FEE_CLAIM_THRESHOLD=0.01
FEE_CLAIM_INTERVAL_MS=300000

# Monitoring (optional)
SENTRY_DSN=""
LOG_LEVEL="info"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Per window

# Security
JWT_SECRET=""
SIGNATURE_EXPIRY_MS=300000  # 5 minutes

# ============ Liquidation Swaps ============
# Enable dry run mode for testing liquidation swaps
LIQUIDATION_DRY_RUN=false

# Liquidation slippage tolerance (in basis points, 500 = 5%)
LIQUIDATION_SLIPPAGE_BPS=500

# High slippage alert threshold (in percentage, 5 = 5%)
LIQUIDATION_HIGH_SLIPPAGE_THRESHOLD=5