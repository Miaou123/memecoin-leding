# Database
DATABASE_URL="postgresql://username:password@localhost:5432/memecoin_lending"

# Redis (optional, for background jobs)
REDIS_URL="redis://localhost:6379"

# Server
PORT=3001
CORS_ORIGIN="http://localhost:3000,http://localhost:5173"

# Jupiter API (for price feeds)
JUPITER_API_KEY=""

# Token Verification Settings
MIN_LIQUIDITY_USD=0  # Set to 0 for testing, 100000 for production
TOKEN_CACHE_TTL_MS=300000  # 5 minutes in milliseconds
DEXSCREENER_API_TIMEOUT=10000  # 10 seconds

# Solana
SOLANA_RPC_URL="https://api.mainnet-beta.solana.com"

# Admin Settings
# Admin keypair is loaded from /keys/admin.json (project root)
# No environment variable needed
PROTOCOL_ADMIN_WALLET=""

# Monitoring (optional)
SENTRY_DSN=""
LOG_LEVEL="info"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Per window

# Security
JWT_SECRET=""
SIGNATURE_EXPIRY_MS=300000  # 5 minutes